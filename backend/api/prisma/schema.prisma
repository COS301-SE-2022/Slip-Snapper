// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  firstname     String
  lastname      String
  weeklyBudget  Float     @default(0)
  monthlyBudget Float     @default(0)
  password      String    @db.VarChar(255)
  slips         Slip[]
  budgets       Json?     @db.Json
  reports       Reports[]
}

model Slip {
  id              Int         @id @default(autoincrement())
  slipNumber      Int         @default(1)
  location        String?
  transactionDate DateTime    @default(now()) @db.Date()
  items           Slip_Item[]
  total           Float
  User            User?       @relation(fields: [usersId], references: [id])
  usersId         Int?
}

model Item {
  id           Int             @id @default(autoincrement())
  data         Item_DataItem[]
  itemQuantity Int
  itemPrice    Float
  Slip         Slip_Item[]
}

model Slip_Item {
  id     Int  @id @default(autoincrement())
  slipId Int
  itemId Int
  slip   Slip @relation(fields: [slipId], references: [id])
  item   Item @relation(fields: [itemId], references: [id])
}

model dataItem {
  id       Int             @id @default(autoincrement())
  item     String
  itemType String
  items    Item_DataItem[]
}

model Item_DataItem {
  id         Int      @id @default(autoincrement())
  dataItemId Int
  itemId     Int
  dataItem   dataItem @relation(fields: [dataItemId], references: [id])
  item       Item     @relation(fields: [itemId], references: [id])
}

model Reports {
  id            Int      @id @default(autoincrement())
  user          User?    @relation(fields: [usersId], references: [id])
  usersId       Int?
  reportName    String   @db.VarChar(255)
  reportNumber  Int      @default(1)
  generatedDate DateTime @default(now()) @db.Date()
}
