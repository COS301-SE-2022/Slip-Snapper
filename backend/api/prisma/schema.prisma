// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  username      String    @unique
  firstname     String
  email         String    @default("")
  lastname      String
  weeklyBudget  Float     @default(0)
  monthlyBudget Float     @default(0)
  password      String    @db.VarChar(255)
  slips         Slip[]
  budgets       Json?     @db.Json
  reports       Reports[]
}

model Slip {
  id              Int     @id @default(autoincrement())
  slipNumber      Int     @default(1)
  location        String?
  transactionDate String  @default("")
  items           Item[]
  total           Float
  User            User?   @relation(fields: [usersId], references: [id])
  usersId         Int?
}

model Item {
  id           Int        @id @default(autoincrement())
  data         dataItem[]
  itemQuantity Int
  itemPrice    Float
  Slip         Slip[]
}

model dataItem {
  id       Int    @id @default(autoincrement())
  item     String
  itemType String
  items    Item[]
}

model Reports {
  id            Int    @id @default(autoincrement())
  user          User?  @relation(fields: [usersId], references: [id])
  usersId       Int?
  reportName    String @db.VarChar(255)
  reportNumber  Int    @default(1)
  generatedDate String @default("")
  reportTotal   Float  @default(0)
}
